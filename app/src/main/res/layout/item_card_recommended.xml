<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_bouquet"
    android:layout_width="155dp"
    android:layout_height="273dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginEnd="16dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bouquet_recommended1"
            android:layout_width="155dp"
            android:layout_height="168dp"
            android:src="@drawable/bouquet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_new"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_favorites_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_rating"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bouquet_recommended1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_bouquet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Букет осенний блюз"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_bouquet_recommended1" />

        <TextView
            android:id="@+id/tv_bouquet_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Розы, ромашки, лилии"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_bouquet_name"
            app:layout_constraintStart_toStartOf="@+id/tv_bouquet_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_bouquet_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_price"
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/button_background_price"
            android:drawableStart="@drawable/ic_basket"
            android:fontFamily="@font/sf_pro_display"
            android:paddingStart="25dp"
            android:paddingTop="5dp"
            android:paddingEnd="30dp"
            android:text="@string/_999"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_bouquet_description"
            app:layout_constraintStart_toStartOf="@+id/tv_bouquet_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_bouquet_description" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>